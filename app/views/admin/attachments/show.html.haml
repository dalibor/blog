.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_attachments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_attachment_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_attachment_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_attachment.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @attachment.name
      %p
        %b
          = t("activerecord.attributes.admin_attachment.url", :default => t("activerecord.labels.url", :default => "Url"))
          \:
        = link_to @attachment.attachment.url(:original, false), @attachment.attachment.url(:original, false)
      %p
        %b
          = t("activerecord.attributes.admin_attachment.attachment_updated_at", :default => t("activerecord.labels.attachment_updated_at", :default => "Attachment updated at"))
          \:
        = @attachment.attachment_updated_at

      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_attachment_path(@attachment), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_attachment_path(@attachment), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
