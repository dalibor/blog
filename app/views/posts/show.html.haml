- title(@post.title)
- keywords(@post.tags.map(&:name).join(', '))
- description(@post.description)

= render 'shared/sidebar'

%article.post
  %header
    %h1= @post.title

  .content
    = raw find_and_preserve(@post.content)

  %footer
    %p
      Posted by #{@post.editor.name} on
      %time= @post.published_at.to_s(:date)
      and tagged with:
      == #{raw @post.tags.map{|tag| link_to(tag.name, tag_posts_path(tag), :rel => 'tag')}.to_sentence}.

  %section.comments
    = render 'shared/disqus'
