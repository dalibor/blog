<% @page_title = @post.title %>
<% @page_description = @post.summary %>
<% @page_keywords = @post.tags.join(', ') %>
<% @page_image = @post.image %>

<%= render 'shared/sidebar' %>

<article class="post">
  <header>
    <h1><%= @post.title %></h1>
  </header>

  <div class="content">
  <%= raw @post.content %>

  <footer>
    <p>
      Posted by <%= @post.author %> on <time><%= @post.date.to_s(:date) %></time> and tagged with: <%= raw @post.tags.map { |tag| link_to(tag, posts_path(:tag => tag), :rel => 'tag')}.to_sentence %>.
    </p>
  </footer>

  <% if Rails.env.production? %>
    <section class="comments">
      <%= render 'shared/disqus' %>
    </section>
  <% end %>
</article>
